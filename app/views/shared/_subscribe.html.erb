  <% if user_signed_in? %>
    <%= form_for :subscription, url: subscription_path do |f| %>
        <%= f.hidden_field :subscriber_id, value: current_user.id %>
        <%= f.hidden_field :channel_id, value: params[:channel_id] %>
        <%= f.submit "Subscribe", class: "btn btn-primary", id: "subscribe" %>
    <%end%>
<%end%>
