<div class="video">
    <h1><%= @video.name %></h1>
    <%= video_tag @video.video_file.url, controls: true, autoplay: true, width: "800", height: "400"%>
    <p><%= @video.description %></p>
    <% if current_user == @video.channel.user %>
        <%= link_to "Delete", channel_video_path(params[:channel_id], @video), method: :delete, data: {confirm: "Are you sure ?"} %>
    <%end%>
    
    <%if user_signed_in? %>
        <% if !is_user_subscribed? %>
            <%= render "shared/subscribe" %>
        <%else%>
            <%= link_to "Unsubscribe", @subscription, method: :delete %>
        <% end %>
    
        <%= form_for @comment do |f| %>
            <%= f.label :content %>
            <%= f.text_area :content %>
            <%= f.hidden_field :video_id, value: @video.id %>
            
            <%= f.submit "New comment" %>
        <%end%>
    <%end%>

    <%= render @comments %>
</div>

